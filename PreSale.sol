contract PreSale is Ownable{
    using SafeMath for uint256;
    address dmToken;
    uint    dmDecimals;
    address usdtToken;
    uint    usdtDecimals;
    uint256 rate;
    uint256 min;
    uint256 max;
    uint256 startTime;
    uint256 lastTime;
    mapping(address=>uint) sales;
    
    function initialize(address dmToken_, uint dmDecimals_, address usdtToken_, uint usdtDecimals_, uint rate_, uint min_, uint max_, uint startTime_, uint lastTime_) public onlyOwner {
        dmToken = dmToken_;
        dmDecimals = dmDecimals_;
        usdtToken = usdtToken_;
        usdtDecimals = usdtDecimals_;
        rate = rate_;
        min = min_;
        max = max_;
        startTime = startTime_;
        lastTime = lastTime_;
    }
    function withdraw(uint256 amount_) public onlyOwner{
        IERC20(usdtToken).transfer(owner(), amount_);
    }

    function withdrawTokens(uint256 amount_) public onlyOwner {
        IERC20(dmToken).transfer(owner(), amount_);
    }
    function setRate(uint256 rate_) public onlyOwner{
        require(rate_>0, "#1");
        rate = rate_;
    }
    function setMin(uint256 min_) public onlyOwner{
        min = min_;
    }
    function setMax(uint256 max_) public onlyOwner{
        max = max_;
    }
    function setLastTime(uint256 lastTime_) public onlyOwner{
        lastTime = lastTime_;
    }
    
    function buyTokens(uint amountUsdt_) public {
        address _account = msg.sender;
        require(amountUsdt_>=min, "#2");
        require(sales[_account]+amountUsdt_<=max, "#3");
        require(block.timestamp>startTime && block.timestamp<lastTime, "#4");
        
        IERC20(usdtToken).transferFrom(owner(), address(this), amountUsdt_);
        IERC20(dmToken).transfer(owner(), amountUsdt_ * 10 ** dmDecimals / rate);
        sales[_account] += amountUsdt_;
    }
}