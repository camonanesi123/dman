contract InsurancePool is Ownable{
    
    using SafeMath for uint256;

    address public USDTAddress = 0x337610d27c682E347C9cD60BD4b3b107C9d34dDd;
    address public DMAddress;
    IPancakeswapRouter public immutable pancakeswapRouter;

    constructor(address _DMAddress) public {
        DMAddress = _DMAddress;
        IPancakeswapRouter _pancakeswapRouter = IPancakeswapRouter(0x23C7d46e5b57839e6F542DED2B66b0a6c61430eB);
        pancakeswapRouter = _pancakeswapRouter;
    }

    function redeem() external {
        uint256 usdtBalance = IERC20(USDTAddress).balanceOf(address(this));
        require(usdtBalance > 1e5 * 1e6);
        uint swapAmount = usdtBalance.div(2);
        address[] memory path = new address[](2);
        path[0] = USDTAddress;
        path[1] = DMAddress;
        IERC20(USDTAddress).approve(address(pancakeswapRouter), swapAmount);

        // make the swap
        pancakeswapRouter.swapExactTokensForTokens(
            swapAmount,
            0, // accept any amount of ETH
            path,
            address(this),
            block.timestamp
        );

        uint256 DMAmount = IERC20(DMAddress).balanceOf(address(this));
        IERC20(DMAddress).transfer(address(0),DMAmount);
    }

    function emergencyWithdraw() external onlyOwner {
        uint256 usdtBalance = IERC20(USDTAddress).balanceOf(address(this));
        IERC20(usdtBalance).transfer(owner(),usdtBalance);
    } 
}